{% extends 'base.html.twig' %}

{% block body %}

    <h3>Approved Proposals/Requests</h3>
    <table id="approved" >

        <th style="padding-left: 20px">
            Reference
        </th>
        <th style="padding-left: 20px">
            Date Approved
        </th>

        {% for proposal2 in approved %}

            <tr>
                <td style="padding-left: 20px">
                    <a href="{{ path('proposal_edit', {'proposal_id': proposal2.id}) }}">{{ proposal2.type }}</a>
                </td>
                <td style="padding-left: 20px">
                    {% if proposal2.approvedAt %}
                        {{ proposal2.approvedAt.format('Y-m-d') }}
                    {% endif %}
                </td>
            </tr>


        {% endfor %}

    </table>

    <div style="padding-bottom: 30px">
        <h3>Pending Proposals</h3>
        <table id="pending">

            <th style="padding-left: 20px">
                Reference
            </th>
            <th style="padding-left: 20px">
                Created At
            </th>
            <th style="padding-left: 20px">
                Last Edit
            </th>

            {% for proposal in pending %}


                <tr>
                    <td style="padding-left: 20px">
                        <a href="{{ path('proposal_edit', {'proposal_id': proposal.id}) }}">{{ proposal.type }}</a>
                    </td>

                    <td style="padding-left: 20px">
                        {{ proposal.createdAt.format('Y-m-d') }}
                    </td>

                    <td style="padding-left: 20px">
                        {{ proposal.updatedAt.format('Y-m-d') }}
                    </td>
                </tr>
            {% endfor %}

        </table>
    </div>

    <div id="add-proposal">

        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default" onclick="window.location.href='http://127.0.0.1:8000/proposal/new'" style="width: 167px">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New proposal
            </button>
            <button type="button" class="btn btn-default" onclick="window.location.href= '{{  path('client_new', {'origin' : 'index'}) }}' " style="width: 167px">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New client
            </button>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}